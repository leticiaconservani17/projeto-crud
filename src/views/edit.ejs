<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <h1> <%= title %> </h1>

    <%- include('partials/navbar.ejs') %>

    <% if (typeof message !== 'undefined') { %>
      <%= message %>
    <% } %>

    <form action="/edit/<%= user._id %>" method="post">
        <div>
            <label>Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
          </div>
          <div>
            <label>Idade</label>
            <input type="text" name="age" placeholder="Digite o sua idade" value="<%= user.age %>">
          </div>
          <div>
            <label>E-mail</label>
            <input type="text" name="email" placeholder="Digite o seu e-mail" value="<%= user.email %>">
          </div>
          <div>
            <label>Senha</label>
            <input type="password" name="password" placeholder="Digite o sua senha" value="<%= user.password %>">
          </div>
          <button type="submit">Editar</button>
    </form>

    <%- include('partials/foot.ejs') %>
</body>
</html>